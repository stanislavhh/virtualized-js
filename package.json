{
    "name": "virtualized-js",
    "version": "1.0.0",
    "description": "Virtualized List component for vanilla JS/TS projects",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "scripts": {
        "start": "webpack serve -c ./webpack.config.dev.ts --mode development",
        "build": "tsc && tsc -m es6 --outDir lib-esm && webpack build -c ./webpack.config.ts --mode production",
        "format": "prettier --write \"src/**/*.ts\"",
        "lint": "tslint -p tsconfig.json",
        "test": "jest --config jest.config.json",
        "prepare": "npm run build",
        "prepublishOnly": "npm test && npm run lint",
        "preversion": "npm run lint",
        "version": "npm run format && git add -A src",
        "postversion": "git push && git push --tags"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/stanislavhh/virtualized-js.git"
    },
    "files": [
        "lib/**/*"
    ],
    "keywords": [
        "virtualized",
        "window",
        "list",
        "typescript",
        "vanilla",
        "js",
        "ts",
        "vanillajs",
        "scrolling",
        "infinite",
        "table",
        "grid"
    ],
    "author": "Stanislav Honcharov",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/stanislavhh/virtualized-js/issues"
    },
    "homepage": "https://github.com/stanislavhh/virtualized-js#readme",
    "devDependencies": {
        "@babel/core": "^7.18.10",
        "@babel/parser": "^7.18.11",
        "@babel/preset-env": "^7.18.10",
        "@babel/preset-typescript": "^7.18.6",
        "@types/jest": "^28.1.6",
        "@types/webpack-dev-server": "^4.7.2",
        "babel-loader": "^8.2.5",
        "css-loader": "^6.7.1",
        "fork-ts-checker-webpack-plugin": "^7.2.13",
        "html-webpack-plugin": "^5.5.0",
        "jest": "^28.1.3",
        "prettier": "^2.7.1",
        "style-loader": "^3.3.1",
        "ts-jest": "^28.0.7",
        "ts-loader": "^9.3.1",
        "ts-node": "^10.9.1",
        "tslint": "^6.1.3",
        "tslint-config-prettier": "^1.18.0",
        "typerscript": "^0.2.3",
        "typescript": "^4.7.4",
        "webpack": "^5.74.0",
        "webpack-cli": "^4.10.0"
    }
}
